<div class="max-w-sm mx-auto mt-24 bg-white shadow-xl rounded-xl px-8 py-10 border border-gray-200">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "space-y-6"}) do |f| %>
    <% if alert.present? %>
      <div class="bg-red-100 text-red-600 px-4 py-2 rounded-md text-sm font-medium">
        <%= alert %>
      </div>
    <% end %>
    <div>
      <%= f.label :email, "Электронная почта", class: "block text-gray-800 font-semibold text-center mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full border-2 border-gray-300 rounded-md px-4 py-2 text-black placeholder-gray-400 focus:outline-none focus:border-blue-500" %>
    </div>
    <div>
      <%= f.label :password, "Пароль", class: "block text-gray-800 font-semibold text-center mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password",
          class: "w-full border-2 border-gray-300 rounded-md px-4 py-2 text-black placeholder-gray-400 focus:outline-none focus:border-blue-500" %>
    </div>
    <div class="flex items-center justify-center gap-3">
      <%= f.check_box :remember_me, class: "rounded border-gray-400" %>
      <%= f.label :remember_me, "Запомнить меня", class: "text-sm text-gray-700 cursor-pointer" %>
    </div>
    <%= f.submit "Войти", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-md transition duration-200 shadow-md" %>
  <% end %>
</div>
