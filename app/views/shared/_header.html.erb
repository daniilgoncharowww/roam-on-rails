<header class="bg-white shadow-md fixed top-0 left-0 w-full z-50">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold">
      <%= link_to "Roam on Rails", root_path %>
    </h1>

    <nav class="hidden md:block">
      <ul class="flex gap-6 items-center">
        <li class="text-gray-700 hover:text-blue-500 font-medium">
          <%= link_to "Главная", root_path %>
        </li>
        <li class="text-gray-700 hover:text-blue-500 font-medium">
          <%= link_to "Туры", tours_path %>
        </li>

        <% if user_signed_in? %>
          <li class="text-gray-700 hover:text-blue-500 font-medium">
            <%= link_to "Административная панель", admin_path %>
          </li>
          <li class="text-gray-700 hover:text-blue-500 font-medium">
            <%= link_to "Выйти", destroy_user_session_path, data: { turbo_method: :delete } %>
          </li>
        <% end %>
      </ul>
    </nav>

    <button id="mobile-menu-button" class="md:hidden text-gray-700 focus:outline-none">
      ☰
    </button>
  </div>

  <nav id="mobile-menu" class="hidden md:hidden bg-white shadow-md">
    <ul class="flex flex-col gap-2 px-4 py-2">
      <li class="text-gray-700 hover:text-blue-500 font-medium">
        <%= link_to "Главная", root_path %>
      </li>
      <li class="text-gray-700 hover:text-blue-500 font-medium">
        <%= link_to "Туры", tours_path %>
      </li>

      <% if user_signed_in? %>
        <li class="text-gray-700 hover:text-blue-500 font-medium">
          <%= link_to "Админ-панель", admin_path %>
        </li>
        <li class="text-gray-700 hover:text-blue-500 font-medium">
          <%= link_to "Выйти", destroy_user_session_path, data: { turbo_method: :delete } %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
