<div class="container mx-auto px-6 py-10">
  <h1 class="text-3xl font-bold text-gray-800 mb-8 text-center">Административная панель</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <%= link_to categories_path, class: "group block bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-200 overflow-hidden" do %>
      <img src="<%= asset_path('category.svg') %>" class="w-full h-48" alt="Категории">
      <div class="px-4 py-3 text-center">
        <h2 class="text-xl font-semibold text-gray-700 group-hover:text-blue-600 transition-colors duration-200">Категории</h2>
      </div>
    <% end %>
    <%= link_to tours_path, class: "group block bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-200 overflow-hidden" do %>
      <img src="<%= asset_path('tours.svg') %>" class="w-full h-48" alt="Туры">
      <div class="px-4 py-3 text-center">
        <h2 class="text-xl font-semibold text-gray-700 group-hover:text-blue-600 transition-colors duration-200">Туры</h2>
      </div>
    <% end %>
    <%= link_to bookings_path, class: "group block bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-200 overflow-hidden" do %>
      <img src="<%= asset_path('bookings.svg') %>" class="w-full h-48" alt="Заказы">
      <div class="px-4 py-3 text-center">
        <h2 class="text-xl font-semibold text-gray-700 group-hover:text-blue-600 transition-colors duration-200">Заказы</h2>
      </div>
    <% end %>
  </div>
</div>
