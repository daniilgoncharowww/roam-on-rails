<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6 text-black">Туры</h1>
  <div class="mb-4">
    <%= link_to "Новый тур", new_admin_tour_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full table-auto bg-white border border-gray-200 rounded shadow">
      <thead>
        <tr class="bg-gray-100 text-left text-gray-700">
          <th class="w-1/12 py-3 px-4 border-b font-medium">
            <%= link_to "ID", admin_tours_path(sort: "id", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "hover:underline" %>
          </th>
          <th class="w-2/12 py-3 px-4 border-b font-medium">
            <%= link_to "Название", admin_tours_path(sort: "name", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "hover:underline" %>
          </th>
          <th class="w-2/12 py-3 px-4 border-b font-medium">
            <%= link_to "Изначальная цена", admin_tours_path(sort: "price", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "hover:underline" %>
          </th>
          <th class="w-1/12 py-3 px-4 border-b font-medium">
            <%= link_to "Скидка", admin_tours_path(sort: "discount_percent", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "hover:underline" %>
          </th>
          <th class="w-2/12 py-3 px-4 border-b font-medium">
            <%= link_to "Цена со скидкой", admin_tours_path(sort: "price", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "hover:underline" %>
          </th>
          <th class="w-4/12 py-3 px-4 border-b font-medium">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @tours.each do |tour| %>
          <tr class="hover:bg-gray-50 text-black text-left">
            <td class="py-3 px-4 border-b"><%= tour.id %></td>
            <td class="py-3 px-4 border-b"><%= tour.name %></td>
            <td class="py-3 px-4 border-b"><%= number_to_currency(tour.price, unit: "₽", precision: 0) %></td>
            <td class="py-3 px-4 border-b"><%= tour.discount_percent %> %</td>
            <td class="py-3 px-4 border-b"><%= number_to_currency(tour.final_price, unit: "₽", precision: 0) %></td>
            <td class="py-3 px-4 border-b space-x-2 font-bold">
              <%= link_to "Подробнее", admin_tour_path(tour), class: "inline-block bg-gray-400 hover:bg-gray-500 text-white text-sm px-3 py-1 rounded" %>
              <%= link_to "Редактировать", edit_admin_tour_path(tour), class: "inline-block bg-yellow-400 hover:bg-yellow-500 text-white text-sm px-3 py-1 rounded" %>
              <%= link_to "Удалить", confirm_destroy_admin_tour_path(tour), method: :delete, data: { confirm: "Вы уверены?" }, class: "inline-block bg-red-500 hover:bg-red-600 text-white text-sm px-3 py-1 rounded" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
