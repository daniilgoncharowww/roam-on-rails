<div class="max-w-3xl mx-auto p-8 bg-white shadow-xl rounded-2xl">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Создание тура</h1>
  <%= form_with model: [:admin, @tour], local: true, html: { multipart: true } do |form| %>
    <% if @tour.errors.any? %>
      <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <p class="font-semibold text-lg mb-2">Не удалось создать тур</p>
      </div>
    <% end %>
    <div class="grid grid-cols-1 gap-6 text-black">
      <div>
        <%= form.label :name, "Название", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring focus:ring-blue-500" %>
        <% @tour.errors[:name].each do |msg| %>
          <p class="text-red-600 text-sm mt-1"><%= msg %></p>
        <% end %>
      </div>
      <div>
        <%= form.label :price, "Цена", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.number_field :price, step: 10, class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring focus:ring-blue-500" %>
        <% @tour.errors[:price].each do |msg| %>
          <p class="text-red-600 text-sm mt-1"><%= msg %></p>
        <% end %>
      </div>
      <div>
        <%= form.label :discount_percent, "Скидка (%)", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.number_field :discount_percent, in: 0..100, step: 1, value: @tour.discount_percent || 0, class: "w-full border border-gray-300 rounded px-4 py-2" %>
        <% @tour.errors[:discount_percent].each do |msg| %>
          <p class="text-red-600 text-sm mt-1"><%= msg %></p>
        <% end %>
      </div>
      <div>
        <%= form.check_box :hidden, class: "mr-2" %>
        <%= form.label :hidden, "Скрыт", class: "font-medium text-gray-700" %>
      </div>
      <div>
        <%= form.label :description, "Описание", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.rich_text_area :description, class: "w-full border border-gray-300 rounded" %>
        <% @tour.errors[:description].each do |msg| %>
          <p class="text-red-600 text-sm mt-1"><%= msg %></p>
        <% end %>
      </div>
      <div>
        <%= form.label :image, "Изображение", class: "block font-medium text-gray-700 mb-1" %>
        <%= form.file_field :image, class: "w-full border border-gray-300 rounded px-4 py-2" %>
      </div>
      <div>
        <%= form.label :category_ids, "Категории", class: "block font-medium text-gray-700 mb-2" %>
        <div class="grid grid-cols-2 gap-2">
          <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
            <div class="flex items-center">
              <%= b.check_box(class: "mr-2") %>
              <%= b.label(class: "text-gray-700") %>
            </div>
          <% end %>
        </div>
      </div>
      <div>
        <%= form.submit "Создать тур", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow-md transition" %>
      </div>
    </div>
  <% end %>
</div>
