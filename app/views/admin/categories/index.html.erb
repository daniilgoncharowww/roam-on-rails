<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6 text-black">Категории</h1>
  <div class="mb-4">
    <%= link_to "Новая категория", new_admin_category_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full table-auto bg-white border border-gray-200 rounded shadow">
      <thead>
        <tr class="bg-gray-100 text-left text-gray-700">
          <th class="w-1/12 py-3 px-4 border-b font-medium">
            <%= link_to "ID", admin_categories_path(sort: "id", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "hover:underline" %>
          </th>
          <th class="w-7/12 py-3 px-4 border-b font-medium">
            <%= link_to "Название", admin_categories_path(sort: "name", direction: params[:direction] == "asc" ? "desc" : "asc"), class: "hover:underline" %>
          </th>
          <th class="w-4/12 py-3 px-4 border-b font-medium">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr class="hover:bg-gray-50 text-black text-left">
            <td class="py-3 px-4 border-b"><%= category.id %></td>
            <td class="py-3 px-4 border-b"><%= category.name %></td>
            <td class="py-3 px-4 border-b space-x-2 font-bold">
              <%= link_to "Редактировать", edit_admin_category_path(category), class: "inline-block bg-yellow-400 hover:bg-yellow-500 text-white text-sm px-3 py-1 rounded" %>
              <%= link_to "Удалить", confirm_destroy_admin_category_path(category), method: :delete, data: { confirm: "Вы уверены?" }, class: "inline-block bg-red-500 hover:bg-red-600 text-white text-sm px-3 py-1 rounded" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
