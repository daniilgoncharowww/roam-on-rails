<% if category.errors.any? %>
  <div class="mb-6 p-4 border border-red-300 bg-red-50 text-red-700 rounded">
    <h2 class="font-semibold text-red-800 mb-2">
      <%= pluralize(category.errors.count, "ошибка") %> при сохранении категории:
    </h2>
    <ul class="list-disc list-inside text-sm">
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [:admin, category], local: true do |form| %>
  <div class="mb-6">
    <%= form.label :name, "Название категории", class: "block text-gray-800 text-lg font-semibold mb-2" %>
    <%= form.text_field :name, class: "w-full border border-gray-400 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-blue-600 transition duration-150 ease-in-out text-gray-900 placeholder-gray-400 shadow-sm" %>
  </div>

  <div class="flex space-x-4 justify-center">
    <%= form.submit category.new_record? ? "Создать" : "Обновить", class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-5 rounded shadow transition" %>
    <%= link_to "Назад", admin_categories_path, class: "bg-gray-400 hover:bg-gray-500 text-white font-semibold py-2 px-5 rounded shadow transition" %>
  </div>
<% end %>
